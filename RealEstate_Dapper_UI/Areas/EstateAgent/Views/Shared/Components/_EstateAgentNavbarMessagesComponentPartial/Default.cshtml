@using RealEstate_Dapper_UI.Dtos.MessageDtos
@model IEnumerable<ResultInBoxWithRelationsDto>


<div class="nav-item dropdown">
    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
        <i class="fa fa-envelope me-lg-2"></i>
        <span class="d-none d-lg-inline-flex">Mesajlar</span>
    </a>
    <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
        @foreach (var item in Model)
        {
            var timeSpan = DateTime.Now - item.SendDate;
            string timeAgo;

            if (timeSpan.TotalMinutes < 1)
            {
                timeAgo = "Az önce";
            }
            else if (timeSpan.TotalMinutes < 60)
            {
                timeAgo = $"{(int)timeSpan.TotalMinutes} Dakika önce";
            }
            else if (timeSpan.TotalHours < 24)
            {
                timeAgo = $"{(int)timeSpan.TotalHours} Saat önce";
            }
            else
            {
                timeAgo = $"{(int)timeSpan.TotalDays} Gün önce";
            }


            <a href="#" class="dropdown-item">
                <div class="d-flex align-items-center">
                    <img class="rounded-circle" src="@item.ImageUrl" alt="" style="width: 40px; height: 40px;">
                    <div class="ms-2">
                        <h6 class="fw-normal mb-0">@item.Name.Split(' ')[0] Sana bir mesaj gönderdi</h6>
                        <small>@timeAgo</small>
                    </div>

                </div>
            </a>
            <hr class="dropdown-divider">

        }
        <a href="#" class="dropdown-item text-center">Tümünü Gör</a>
    </div>
</div>
