@model RealEstate_Dapper_UI.Dtos.PopularLocationDtos.UpdatePopularLocationsDto
@{
    ViewData["Title"] = "UpdatePopularLocations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4 text-primary">Popüler Lokasyonu Düzenle</h6>

        @Html.HiddenFor(x => x.id)


        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput"
                   placeholder="Şehir" asp-for="city">
            <label for="floatingInput">Şehir</label>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput"
                   placeholder="Görsel" asp-for="imageUrl">
            <label for="floatingInput">Görsel</label>
        </div>

        <div>
            <button type="submit" class="btn btn-primary rounded-pill"><i class="fa fa-plus me-2"></i>Kaydet</button>
        </div>

    </div>
</form>


