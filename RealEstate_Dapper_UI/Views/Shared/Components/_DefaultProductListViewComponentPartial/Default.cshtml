@using RealEstate_Dapper_UI.Dtos.ProductDtos
@model IEnumerable<ResultProductDto>

<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Günün Favori İlanları</h3>
            </div>
            <div class="row pt-md-5 pt-4">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <a href="/Property/SingleProperty/@item.productId">
                            <div class="box16">
                                <div class="rentext-listing-category mt-3"><span>@item.type</span><span>@item.categoryName</span></div>
                                <img class="mt-3" src="@item.coverImg" alt="" style="height: 250px;">
                                <div class="box-content">
                                    <h3 class="title">₺ @item.price.ToString("N0")</h3>
                                    <span class="post">@item.address - @item.city, @item.district</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
