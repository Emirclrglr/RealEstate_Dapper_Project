@using RealEstate_Dapper_UI.Dtos.ServiceDtos
@model IEnumerable<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h3 class="mb-4 text-primary">Hizmetler</h3>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col" style="width: 50px;" class="text-center">#</th>
                        <th scope="col">Hizmet Adı</th>
                        <th scope="col" class="text-center">Durum</th>
                        <th scope="col" class="text-center">Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row" style="width: 50px;" class="text-center align-middle">@count</th>
                            <td class="align-middle">@item.serviceName</td>
                            @if (item.serviceStatus == true)
                            {
                                <td class="align-middle text-center"><span class="bg-success text-white px-3 rounded">Aktif</span></td>
                            }
                            else
                            {
                                <td class="align-middle text-center"><span class="bg-danger text-white px-3 rounded">Pasif</span></td>
                            }
                            <td class="text-center align-middle" style="width:250px;"><a href="/Service/UpdateService/@item.id" class="btn btn-primary rounded-pill"><i class="fas fa-edit"></i></a></td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


