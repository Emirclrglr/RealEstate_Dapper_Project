@using RealEstate_Dapper_UI.Dtos.BottomGridDtos
@model IEnumerable<ResultBottomGridDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;

}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h3 class="text-primary">Öne Çıkanlar</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" style="width: 50px;" class="text-center">#</th>
                        <th scope="col" class="text-center">İkon</th>
                        <th scope="col">Başlık</th>
                        <th scope="col" class="text-center">Açıklama</th>
                        <th scope="col" class="text-center">Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row" style="width: 50px;" class="text-center pt-3">@count</th>
                            <td class="align-middle text-center"><i class="@item.bottomGridIcon fa-2x"></i></td>
                            <td class="align-middle">@item.bottomGridTitle</td>
                            <td class="align-middle">@item.bottomGridDescription</td>
                            <td class="text-center" style="width:250px;"><a href="/BottomGrid/UpdateBottomGrid/@item.bottomGridId" class="btn btn-primary rounded-pill"><i class="fas fa-edit"></i></a></td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


